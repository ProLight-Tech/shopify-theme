{{ 'section-newsletter-banner.css' | asset_url | stylesheet_tag }}

<div
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}"
  class="newsletter-banner-container"
>
  <div class="newsletter-banner-wrapper">
    <h2 style="color: {{ section.settings.text_color }};">{{ section.settings.title }}</h2>
    <form
      id="newsletter_form-{{ section.id }}"
      action="{{ section.settings.newsletter_link }}"
      method="post"
      role="newsletter"
      class="newsletter-banner-form"
    >
      <input
        id="newsletter_field-sectionId-{{ section.id }}"
        name="newsletter_signup"
        class="text__input"
        placeholder="{{ section.settings.placeholder_input }} "
      >
      <button class="button newsletter-button" type="submit">{{ section.settings.text_button }}</button>
    </form>
    <p class="text-body">{{ section.settings.paragraph | escape }}</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    event.preventDefault();
    const form = document.getElementById('newsletter_form-{{ section.id }}');
  });
</script>

