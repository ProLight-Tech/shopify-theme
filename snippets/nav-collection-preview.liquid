<a href="{{ collection.url }}">
  <div class="nav-collection-preview-container">
    <div class="nav-collection-preview-title">
      <p class="text-body">{{ collection.title }}</p>
    </div>
    <div class="nav-collection-preview-image">
      {%- if collection.featured_image != blank -%}
        {{ collection.featured_image | image_url: height: 100 | image_tag }}
      {%- else -%}
        <img
          src="{{ 'nav-collection-preview-placeholder.png' |  asset_url }}"
          width="200"
          height="100"
          alt="Placeholder image"
        >
      {%- endif -%}
    </div>
  </div>
</a>
